@model List<ResultDiscussionDto>

@{
    ViewData["Title"] = "Tartışmalarım";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<section class="my-discussions section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2 class="section-title">Tartışmalarım</h2>

                @if (Model.Count == 0)
                {
                    <p>Henüz bir tartışma açmadınız. <a href="/Discussion/Create">Hemen oluşturun!</a></p>
                }
                else
                {
                    <ul class="discussion-list">
                        @foreach (var item in Model)
                        {
                            <li class="discussion-item">
                                <a href="/Discussion/Detail/@item.Id" class="discussion-title">@item.Title</a>
                                <p class="discussion-meta">Tarih: @item.CreatedAt.ToString("dd MMM yyyy") | Yanıtlar: @item.ReplyCount</p>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</section>

<style>
    .section-padding {
        padding: 50px 0;
    }
    .section-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }
    .discussion-list {
        list-style: none;
        padding: 0;
    }
    .discussion-item {
        background: #fff;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }
    .discussion-title {
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
        text-decoration: none;
    }
    .discussion-title:hover {
        text-decoration: underline;
    }
    .discussion-meta {
        font-size: 14px;
        color: #555;
    }
</style>
