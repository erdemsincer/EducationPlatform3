@model ResultUserDto
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<section class="profile-area section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="profile-card">
                    <div class="profile-header text-center">
                        <img src="@Model.ProfileImage" alt="Profil Fotoğrafı" class="profile-img">
                        <h2>@Model.FullName</h2>
                        <p>@Model.Email</p>
                    </div>

                    <div class="profile-details">
                        <h4>Hesap Bilgileri</h4>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Ad Soyad:</strong> @Model.FullName</li>
                            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                            <li class="list-group-item"><strong>Kayıt Tarihi:</strong> @Model.CreatedAt.ToString("dd MMM yyyy")</li>
                        </ul>

                        <div class="text-center mt-4">
                            <a href="/Profile/Update" class="btn btn-primary">Profili Düzenle</a>
                            <a href="/Auth/Logout" class="btn btn-danger">Çıkış Yap</a>
                            <a href="/Profile/MyDiscussions" class="btn btn-primary">Tartışmalarım</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .profile-area {
        padding: 50px 0;
    }
    .profile-card {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }
    .profile-header {
        margin-bottom: 20px;
    }
    .profile-img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
    }
    .list-group-item {
        border: none;
        font-size: 18px;
    }
    .btn {
        margin: 10px;
    }
</style>
