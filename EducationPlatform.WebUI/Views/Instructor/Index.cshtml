@model List<ResultInstructorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<main>
    <!-- Hero Start -->
    <div class="slider-area">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 text-center">
                            <h2>Eğitmenlerimiz</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!-- Eğitmenler Alanı Başlangıç -->
    <div class="team-area pt-160 pb-160">
        <div class="container">
            <div class="row">
                @foreach (var instructor in Model)
                {
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="single-team mb-30">
                            <div class="team-img">
                                <a href="@Url.Action("InstructorDetails", "Instructor", new { id = instructor.Id })">
                                    <img src="@instructor.ProfileImage" alt="@instructor.FullName" style="width:250px;height:250px">
                                </a>
                                <!-- Sosyal Medya Bağlantıları -->
                                <ul class="team-social">
                                    <li><a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="https://www.twitter.com" target="_blank"><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="https://www.linkedin.com" target="_blank"><i class="fab fa-linkedin-in"></i></a></li>
                                </ul>
                            </div>
                            <div class="team-caption">
                                <h3>
                                    <a href="@Url.Action("InstructorDetails", "Instructor", new { id = instructor.Id })">
                                        @instructor.FullName
                                    </a>
                                </h3>
                                <p>@instructor.Title - @instructor.Department</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Eğitmenler Alanı Bitiş -->
</main>

