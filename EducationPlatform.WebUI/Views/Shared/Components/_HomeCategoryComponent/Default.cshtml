@model List<ResultCategoryDto>

<div class="categories-area section-padding30">
    <div class="container">
        <div class="row justify-content-sm-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
                <!-- Section Başlığı -->
                <div class="section-tittle text-center mb-70">
                    <span>Popüler Kategoriler</span>
                    <h2>Tüm Kategorilere Göz At</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="single-cat mb-50 p-4 border rounded-3 shadow-sm text-center bg-white">
                        <div class="cat-icon">
                            <span class="flaticon-education"></span> <!-- Sabit ikon veya kategoriye özel ikon eklenebilir -->
                        </div>
                        <div class="cat-cap">
                            <h5>
                                <a href="/Resources/Category/@category.Id" class="text-dark text-decoration-none">@category.Name</a>
                            </h5>
                            <p>Bu kategorideki kaynakları keşfedin.</p>
                            <a href="/Resources/Category/@category.Id" class="read-more1 text-primary fw-bold">Daha Fazla &gt;</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Buton -->
        <div class="row">
            <div class="col-lg-12">
                <div class="browse-btn2 text-center mt-50">
                    <a href="/Resources" class="btn btn-primary">Tüm Kategorileri Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>
