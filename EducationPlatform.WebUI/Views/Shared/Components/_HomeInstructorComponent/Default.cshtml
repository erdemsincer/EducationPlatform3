@model List<ResultInstructorDto>

<div class="team-area pt-160 pb-160 section-bg" data-background="/onlineedu-master/assets/img/gallery/section_bg02.png">
    <div class="container">
        <div class="row justify-content-center">
            <div class="cl-xl-7 col-lg-8 col-md-10">
                <!-- Section Tittle -->
                <div class="section-tittle section-tittle2 text-center mb-70">
                    <span>Eğitmenlerimiz Hakkında Daha Fazla Bilgi</span>
                    <h2>Alanında Uzman Eğitmenlerimiz</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var instructor in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-team mb-30">
                        <div class="team-img">
                            <img src="@instructor.ProfileImage" alt="@instructor.FullName">
                            <!-- Blog Social -->
                            <ul class="team-social">
                                <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fas fa-globe"></i></a></li>
                            </ul>
                        </div>
                        <div class="team-caption">
                            <h3>
                                <a href="@Url.Action("InstructorDetails", "Instructor", new { instructorId = instructor.Id })">
                                    @instructor.FullName
                                </a>
                            </h3>
                            <p>@instructor.Title - @instructor.Department</p>
                            <p><strong>Average Rating:</strong>  ⭐</p>

                            <!-- Eğitmene yorum yapma butonu -->
                            <a href="@Url.Action("AddReview", "Instructor", new { instructorId = instructor.Id })" class="btn btn-primary">
                                Değerlendirme Yap
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
