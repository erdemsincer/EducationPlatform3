@model List<ResultResourceDto>

<style>
    .single-resource {
        transition: all 0.3s ease-in-out;
        border-radius: 20px;
        background: linear-gradient(to top, #ffffff, #f8f9fa);
    }

    .single-resource:hover {
        transform: translateY(-6px);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
    }

    .btn-outline-success {
        border-width: 2px;
        transition: all 0.3s ease;
    }

    .btn-outline-success:hover {
        background-color: #198754;
        color: white;
        border-color: #198754;
    }

    .badge.bg-gradient-primary {
        background: linear-gradient(45deg, #4e73df, #1cc88a);
        color: white;
        font-size: 0.75rem;
        padding: 5px 10px;
        border-radius: 30px;
    }

    .resource-caption h4 a:hover {
        color: #1cc88a;
        text-decoration: underline;
    }
</style>

<div class="popular-resource section-padding30">
    <div class="container">
        <!-- Başlık -->
        <div class="row justify-content-sm-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
                <div class="section-tittle text-center mb-5">
                    <span class="text-primary fw-bold">Öne Çıkan Kaynaklarımız</span>
                    <h2 class="fw-bold">En Popüler Kaynaklara Göz Atın</h2>
                    <p class="text-muted">Alanında uzman kişiler tarafından eklenen en iyi kaynakları keşfedin.</p>
                </div>
            </div>
        </div>

        <!-- Kaynak Kartları -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single-resource mb-4 p-4 border shadow bg-white">
                        <div class="resource-caption">
                            <!-- Başlık -->
                            <div class="resource-cap-top text-center mb-3">
                                <h4 class="fw-bold">
                                    <a href="@item.FileUrl" target="_blank" class="text-dark text-decoration-none">
                                        @item.Title
                                    </a>
                                </h4>
                            </div>

                            <!-- Açıklama -->
                            <p class="text-muted small mb-3">@item.Description</p>

                            <!-- Kategori ve Tarih -->
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-gradient-primary">@item.CategoryName</span>
                                <small class="text-muted">
                                    <i class="fas fa-calendar-alt me-1"></i>@item.CreatedAt.ToString("dd MMM yyyy")
                                </small>
                            </div>

                            <!-- Kullanıcı ve Buton -->
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>@item.UserName
                                </small>
                                <a href="@item.FileUrl" class="btn btn-outline-success btn-sm fw-bold px-3 py-2 rounded-pill shadow-sm" target="_blank">
                                    <i class="fas fa-file-download me-1"></i>Kaynağı Aç
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Tüm Kaynaklara Git -->
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="text-center">
                    <a href="/Resource/Index" class="btn btn-lg btn-primary fw-bold px-4 py-3 rounded-pill shadow">
                        <i class="fas fa-book-open me-2"></i>Tüm Kaynaklara Göz At
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
