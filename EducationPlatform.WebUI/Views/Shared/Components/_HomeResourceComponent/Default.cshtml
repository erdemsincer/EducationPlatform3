@model List<ResultResourceDto>

<div class="popular-resource section-padding30">
    <div class="container">
        <!-- Bölüm Başlığı -->
        <div class="row justify-content-sm-center">
            <div class="col-xl-7 col-lg-8 col-md-10">
                <div class="section-tittle text-center mb-5">
                    <span class="text-primary fw-bold">Öne Çıkan Kaynaklarımız</span>
                    <h2 class="fw-bold">En Popüler Kaynaklara Göz Atın</h2>
                    <p class="text-muted">Alanında uzman kişiler tarafından eklenen en iyi kaynakları keşfedin.</p>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <!-- Kaynak Kartı -->
                    <div class="single-resource mb-4 p-4 border rounded-3 shadow-lg bg-white">
                        <div class="resource-caption">
                            <div class="resource-cap-top text-center">
                                <h4 class="fw-bold">
                                    <a href="@item.FileUrl" target="_blank" class="text-dark text-decoration-none">@item.Title</a>
                                </h4>
                            </div>
                            <p class="text-muted small">@item.Description</p>

                            <!-- Kategori ve Tarih -->
                            <div class="d-flex justify-content-between align-items-center my-3">
                                <span class="badge bg-gradient-primary">@item.CategoryName</span>
                                <span class="text-muted small">
                                    <i class="fas fa-calendar-alt"></i> @item.CreatedAt.ToString("dd MMM yyyy")
                                </span>
                            </div>

                            <!-- Kullanıcı ve Kaynak Aç Butonu -->
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">
                                    <i class="fas fa-user"></i> @item.UserName
                                </span>
                                <a href="@item.FileUrl" class="btn btn-outline-success btn-sm fw-bold px-3 py-2 rounded-pill shadow-sm" target="_blank">
                                    <i class="fas fa-file-download"></i> Kaynağı Aç
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Daha Fazla Kaynak Butonu -->
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="text-center">
                    <a href="/Resource/Index" class="btn btn-lg btn-primary fw-bold px-4 py-3 rounded-pill shadow">
                        <i class="fas fa-book-open"></i> Tüm Kaynaklara Göz At
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
