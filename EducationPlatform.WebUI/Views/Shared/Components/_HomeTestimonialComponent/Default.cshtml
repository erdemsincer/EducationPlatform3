@model List<ResultTestimonialDto>

<style>
    .single-testimonial {
        background: #ffffffd9;
        border-radius: 20px;
        padding: 40px 30px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .single-testimonial:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }

    .testimonial-icon img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #4e73df;
        margin-bottom: 20px;
    }

    .testimonial-caption p {
        font-style: italic;
        font-size: 1.1rem;
        color: #333;
    }

    .testimonial-ratting i {
        color: #f6c23e;
        font-size: 1rem;
        margin: 0 2px;
    }

    .rattiong-caption span {
        font-weight: bold;
        font-size: 1rem;
        color: #444;
    }

    .rattiong-caption span span {
        font-weight: normal;
        color: #777;
    }
</style>

<div class="testimonial-area fix pt-180 pb-180 section-bg" data-background="/onlineedu-master/assets/img/gallery/section_bg03.png">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-9 col-md-9">
                <div class="h1-testimonial-active">
                    @foreach (var item in Model)
                    {
                        <div class="single-testimonial pt-65 text-center">
                            <!-- Görsel -->
                            <div class="testimonial-icon mb-4">
                                <img src="@item.ImageUrl" class="ani-btn" alt="@item.Name" />
                            </div>

                            <!-- Yorum -->
                            <div class="testimonial-caption">
                                <p>"@item.Comment"</p>

                                <!-- Yıldızlar -->
                                <div class="testimonial-ratting mb-2">
                                    @for (int i = 1; i <= item.Star; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    @for (int i = item.Star + 1; i <= 5; i++)
                                    {
                                        <i class="far fa-star text-muted"></i> <!-- Boş yıldız -->
                                    }
                                </div>

                                <!-- İsim & Ünvan -->
                                <div class="rattiong-caption">
                                    <span>@item.Name<span> – @item.Title</span></span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
