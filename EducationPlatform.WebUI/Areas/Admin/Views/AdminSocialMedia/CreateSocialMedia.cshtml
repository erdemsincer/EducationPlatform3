@model CreateSocialMediaDto
@{
    ViewData["Title"] = "Yeni Sosyal Medya Ekle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">🌐 Yeni Sosyal Medya Ekle</h2>

        <form method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label fw-bold">📌 Sosyal Medya Adı</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Örneğin: Twitter, Instagram" required />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">🔗 Sosyal Medya URL</label>
                <input type="url" asp-for="Url" class="form-control" placeholder="https://www.example.com" required />
                <span class="text-danger" asp-validation-for="Url"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">🎨 İkon</label>
                <input type="text" asp-for="Icon" class="form-control" placeholder="Örneğin: fab fa-twitter" required />
                <span class="text-danger" asp-validation-for="Icon"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" asp-controller="AdminSocialMedia" asp-area="Admin" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
