@model UpdateAboutDto

@{
    ViewData["Title"] = "Hakkımızda Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Hakkımızda Güncelle</h2>

    <form asp-action="UpdateAbout" asp-controller="AdminAbout" asp-area="Admin" method="post">
        <input type="hidden" asp-for="AboutId" />

        <div class="form-group">
            <label>Açıklama</label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>

        <div class="form-group">
            <label>Madde 1</label>
            <input type="text" class="form-control" asp-for="Item1" />
        </div>

        <div class="form-group">
            <label>Madde 2</label>
            <input type="text" class="form-control" asp-for="Item2" />
        </div>

        <div class="form-group">
            <label>Madde 3</label>
            <input type="text" class="form-control" asp-for="Item3" />
        </div>

        <div class="form-group">
            <label>Madde 4</label>
            <input type="text" class="form-control" asp-for="Item4" />
        </div>

        <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
    </form>
</div>
