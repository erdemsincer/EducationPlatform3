@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Html.PartialAsync("~/Areas/Admin/Views/AdminLayout/AdminHeaderPartial.cshtml")
<body>
    <div id="layout-wrapper">
        @await Html.PartialAsync("~/Areas/Admin/Views/AdminLayout/AdminNavBarPartial.cshtml")
        @await Html.PartialAsync("~/Areas/Admin/Views/AdminLayout/AdminSideBarPartial.cshtml")

        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>

        @await Html.PartialAsync("~/Areas/Admin/Views/AdminLayout/AdminFooterPartial.cshtml")
    </div>

    <!-- Scripts Section Ekleniyor -->
    @RenderSection("Scripts", required: false)

    @await Html.PartialAsync("~/Areas/Admin/Views/AdminLayout/AdminScriptPartial.cshtml")
</body>
</html>
