@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Areas/Student/Views/StudentLayout/Index.cshtml";
}
<h2>Yorumlarım</h2>

<table class="table">
    <thead>
        <tr>
            <th>İçerik</th>
            <th>Eklenme Tarihi</th>
            <th>Kaynak</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Content</td>0,
                3
                <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td>@item.ResourceTitle</td>
                <td>
                    <a href="/Student/StudentComment/Delete/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Yorumu silmek istediğinize emin misiniz?');">
                        Sil
                    </a>
                </td>


            </tr>
        }
    </tbody>
</table>
