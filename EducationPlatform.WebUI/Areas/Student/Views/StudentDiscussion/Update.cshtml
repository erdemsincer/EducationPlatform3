@model UpdateDiscussionDto

@{
    ViewData["Title"] = "Tartışma Güncelle";
    Layout = "~/Areas/Student/Views/StudentLayout/Index.cshtml";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="container mt-5">
    <h2 class="mb-4">Tartışma Güncelle</h2>

    <form method="post" asp-action="UpdateDiscussion">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Başlık</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="form-group">
            <label>İçerik</label>
            <textarea asp-for="Content" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
        <a href="/Student/StudentDiscussion/MyDiscussions" class="btn btn-secondary mt-3">Geri Dön</a>
    </form>
</div>
